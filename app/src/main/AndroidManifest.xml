<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="m2dl.shibrenoa.mobechallenge">

    <uses-feature
        android:name="android.hardware.sensor"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MOBEChallenge">
        <activity android:name=".activities.HomeMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LeaderboardActivity"/>
        <activity android:name=".activities.EndMenuActivity" />
        <activity android:name=".activities.GameActivity" />
    </application>

</manifest>